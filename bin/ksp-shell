#!/bin/bash

rc=`tempfile -p kspsh`
trap "rm -f '$rc'" EXIT

baserc="$HOME/.re.pl/repl.rc"

[ -f "$baserc" ] && cp "$baserc" "$rc"
cat <<'ENDRC' >> $rc
use utf8;
use Math::Trig;
use Math::Vector::Real;
use KSP qw(:all);
KSP::SolarSystem->new("RealSolarSystem")->import_bodies();
binmode $_REPL->out_fh, ":utf8";
$_REPL->prompt("KSP> ");
ENDRC

re.pl --rcfile "$rc"

